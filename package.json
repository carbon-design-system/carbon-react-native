{
  "name": "@carbon/react-native",
  "version": "8.2.2",
  "description": "Carbon for React Native Library",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "telemetry.yml",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example:start": "npm --prefix ./example run start",
    "example:bump": "node ./scripts/bump-example.js",
    "postinstall": "ibmtelemetry --config=telemetry.yml",
    "docs": "typedoc"
  },
  "keywords": [
    "ibm",
    "carbon",
    "carbon-components",
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbon-design-system/carbon-react-native.git"
  },
  "author": "IBM <david.bradshaw@ibm.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/carbon-design-system/carbon-react-native/issues"
  },
  "homepage": "https://github.com/carbon-design-system/carbon-react-native",
  "devDependencies": {
    "@babel/eslint-parser": "^7.26.8",
    "@carbon/icon-helpers": "^10.55.0",
    "@carbon/icons": "^11.56.0",
    "@carbon/themes": "^11.47.0",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@release-it/conventional-changelog": "^10.0.0",
    "@types/jest": "^29.5.14",
    "@types/react": "19.0.0",
    "commitlint": "^19.7.1",
    "eslint": "^9.21.0",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "pod-install": "^0.3.4",
    "react": "19.0.0",
    "react-native": "0.78.0",
    "react-native-builder-bob": "^0.37.0",
    "react-native-svg": "^15.11.2",
    "react-native-webview": "^13.13.2",
    "release-it": "^18.1.2",
    "typedoc": "^0.27.9",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0"
  },
  "resolutions": {
    "@types/react": "19.0.0"
  },
  "peerDependencies": {
    "@carbon/icon-helpers": "*",
    "@carbon/icons": "*",
    "@carbon/themes": "*",
    "react": "*",
    "react-native": "*",
    "react-native-svg": "*",
    "react-native-webview": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}\n\nci-skip",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "provenance": true
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "@ibm/telemetry-js": "^1.9.1"
  }
}

{
  "name": "@carbon/react-native",
  "version": "8.0.25",
  "description": "Carbon for React Native Library",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "carbon-react-native.podspec",
    "telemetry.yml",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn && yarn example pods",
    "example:bump": "node ./scripts/bump-example.js",
    "postinstall": "ibmtelemetry --config=telemetry.yml",
    "docs": "typedoc"
  },
  "keywords": [
    "ibm",
    "carbon",
    "carbon-components",
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbon-design-system/carbon-react-native.git"
  },
  "author": "IBM <david.bradshaw@ibm.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/carbon-design-system/carbon-react-native/issues"
  },
  "homepage": "https://github.com/carbon-design-system/carbon-react-native",
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.3",
    "@carbon/icon-helpers": "^10.45.0",
    "@carbon/icons": "^11.30.1",
    "@carbon/themes": "^11.27.1",
    "@commitlint/config-conventional": "^18.4.3",
    "@evilmartians/lefthook": "^1.5.4",
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/jest": "^29.5.10",
    "@types/react": "18.2.55",
    "@types/react-native": "0.73.0",
    "commitlint": "^18.4.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-ft-flow": "^3.0.4-alpha-0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "pod-install": "^0.2.0",
    "prettier": "^3.1.0",
    "react": "18.2.0",
    "react-native": "0.73.4",
    "react-native-builder-bob": "^0.23.2",
    "react-native-svg": "^14.0.0",
    "react-native-webview": "^13.6.3",
    "release-it": "^17.0.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.2"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "@carbon/icon-helpers": "*",
    "@carbon/icons": "*",
    "@carbon/themes": "*",
    "react": "*",
    "react-native": "*",
    "react-native-svg": "*",
    "react-native-webview": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}\n\nci-skip",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "off",
      "no-unused-vars": "error",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false,
          "printWidth": 20000
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "provenance": true
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "@ibm/telemetry-js": "^1.5.0"
  }
}

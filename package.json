{
  "name": "@aspera-ui/carbon-react-native",
  "version": "0.3.4",
  "description": "Carbon React Native Library",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "carbon-react-native.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn && yarn example pods",
    "example:bump": "node ./scripts/bump-example.js"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.ibm.com/Aspera/carbon-react-native",
  "author": "IBM <david.bradshaw@ibm.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.ibm.com/Aspera/carbon-react-native/issues"
  },
  "homepage": "https://github.ibm.com/Aspera/carbon-react-native#readme",
  "publishConfig": {
    "registry": "https://na.artifactory.swg-devops.com/artifactory/api/npm/hyc-aspera-ui-team-npm-local/"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@carbon/icon-helpers": "^10.42.1",
    "@carbon/icons": "^11.22.1",
    "@carbon/themes": "^11.21.1",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.4.4",
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^7.0.0",
    "@types/jest": "^29.5.3",
    "@types/react": "18.2.14",
    "@types/react-native": "0.72.2",
    "commitlint": "^17.6.6",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^5.0.0-alpha.2",
    "jest": "^29.6.1",
    "pod-install": "^0.1.0",
    "prettier": "^3.0.0",
    "react": "18.2.0",
    "react-native": "0.72.1",
    "react-native-builder-bob": "^0.21.2",
    "react-native-svg": "^13.0.0",
    "react-native-webview": "^13.2.2",
    "release-it": "^16.1.0",
    "typescript": "^5.1.6"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "@carbon/icon-helpers": "*",
    "@carbon/icons": "*",
    "@carbon/themes": "*",
    "react": "*",
    "react-native": "*",
    "react-native-svg": "*",
    "react-native-webview": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "off",
      "no-unused-vars": "error",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false,
          "printWidth": 20000
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
